<h2>スレッド作成</h2>
<form action="thread" method="post">
    <div>
        <p>カテゴリー</p>
        <select name="category">
            <option hidden selected>選択してください</option>
            <option value="news">ニュース</option>
            <option value="study">学問</option>
            <option value="foods">食べ物</option>
            <option value="hobby">趣味</option>
            <option value="chat">その他雑談</option>
        </select>
    </div>
    <div>
        <label for="ThreadName">スレッド名</label>
        <input type="text" name="ThreadName">
    </div>
    <div>
        <label for="Message">メッセージ</label>
        <textarea name="Message"></textarea>
    </div>
    <input type="submit" name="submit">
</form>
